<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Varastokirjanpito_projekti.Pages.UserControl">
    
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Button 
            Text="Lisää käyttäjä"
            Clicked="AddUser"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Poista käyttäjä"
            Clicked="DeleteUser"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Päävalikkoon"
            Clicked="BackToMenu"
            HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>