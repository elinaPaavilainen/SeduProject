<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Varastokirjanpito_projekti.Pages.BookLoss">
    
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label 
            Text="Poiston lisätiedot (ei pakollinen)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="Notes"
            Placeholder="Esim. myyntikelvoton, sivuja revennyt..."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button
            Text="Poista"
            Clicked="DeleteBook"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Päävalikkoon"
            Clicked="BackToMenu"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>