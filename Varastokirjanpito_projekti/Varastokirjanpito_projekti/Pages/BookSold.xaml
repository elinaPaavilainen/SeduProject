<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Varastokirjanpito_projekti.Pages.BookSold">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Label 
            Text="Myyty määrä:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="SoldCount"
            Text="1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="Myynnin lisätiedot (ei pakollinen)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="Notes"
            Placeholder="Esim. lähetetty lahjaksi paketoituna..."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Myy"
            Clicked="SellBook"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>